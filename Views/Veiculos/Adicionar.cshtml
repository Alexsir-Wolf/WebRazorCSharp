        <div class="col-sm-4">
            @Html.TextBoxFor(v => v.Valor, new { @class = "form-control" })
            @Html.ValidationMessageFor(v => v.Valor, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="buttonSave text-center">
        <button class="btn btn-success " type="submit">Salvar</button>
    </div>
}


