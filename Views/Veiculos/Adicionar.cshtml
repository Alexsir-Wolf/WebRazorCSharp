@model WebRazorCSharp.Models.Veiculos


<h2 class="text-center">@ViewBag.Message</h2>


@using (Html.BeginForm("Salvar", "Veiculos", FormMethod.Post, new { id = "formVeiculosAdicionar", name = "formVeiculosAdicionar" }))
{
